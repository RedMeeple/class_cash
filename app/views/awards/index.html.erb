<p id="notice"><%= notice %></p>

<h1>Listing Awards</h1>

<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Award type</th>
      <th>Reason</th>
      <th>Payment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @awards.each do |award| %>
      <tr>
        <td><%= award.student_id %></td>
        <td><%= award.award_type %></td>
        <td><%= award.reason %></td>
        <td><%= award.payment %></td>
        <td><%= link_to 'Show', award %></td>
        <td><%= link_to 'Edit', edit_award_path(award) %></td>
        <td><%= link_to 'Destroy', award, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

