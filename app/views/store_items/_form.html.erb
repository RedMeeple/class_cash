<%= simple_form_for(@store_item) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :price %>
    <%= f.input :stock, label: "Number in Stock. Leave blank for unlimited." %>
    <%= f.hidden_field :instructor_id, value: @instructor.id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class:"pure-button btn-cc" %>
  </div>
<% end %>
