<div class="heading-container">
  <h1>Student Accounts</h1>
</div>
<div class="gen-container">
  <%= simple_form_for @period, html: { class: "pure-form" } do |f| %>
    <%= f.error_notification %>

    <%= f.simple_fields_for :students do |ff| %>
      <div class="loan-permission-inputs">
        <span class="loan-permission-name"><%= ff.object.full_name %></span>
        <span class="loan-permission-radio"><%= ff.input :disabled, label: "Disabled Account" %></span>
      </div>
    <% end %>

    <%= f.button :submit, "Submit", class: "pure-button btn-cc" %>
  <% end %>
</div>
