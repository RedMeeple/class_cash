<%= simple_form_for @period do |f| %>

    <%= f.hidden_field :instructor_id, value: @instructor.id %>

    <%= f.input :payscale, label: "Daily Salary" %>
    <%= f.input :name %>

  <h3>Add Students</h3>
  <table class="student-table">
    <thead>
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>E-mail Address</th>
        <th>Password</th>
      </tr>
    </thead>
    <tbody>
      <%= f.fields_for :students do |ff| %>
        <tr>
          <td><%= ff.input :first_name, label: false %></td>
          <td><%= ff.input :last_name, label: false %></td>
          <td><%= ff.input :email, label: false %></td>
          <td><%= ff.input :password, label: false %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

    <%= f.button :submit %>

<% end %>
