<%= form_for(@period) do |f| %>
  <% if @period.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@period.errors.count, "error") %> prohibited this period from being saved:</h2>

      <ul>
      <% @period.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.hidden_field :instructor_id, value: @instructor.id %>
  </div>
  <div class="field">
    <%= f.label :payscale_per_day %><br>
    <%= f.number_field :payscale %>
  </div>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <h3>Add Students</h3>
  <table class="student-table">
    <thead>
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>E-mail Address</th>
        <th>Password</th>
      </tr>
    </thead>
    <tbody>
      <%= f.fields_for :students do |ff| %>
        <tr>
          <td><div class="field">
            <%= ff.text_field :first_name %>
          </div></td>
          <td><div class="field">
            <%= ff.text_field :last_name %>
          </div></td>
          <td><div class="field">
            <%= ff.email_field :email %>
          </div></td>
          <td><div class="field">
            <%= ff.password_field :password %>
          </div></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
