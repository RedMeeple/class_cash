<div id="notice"><%= notice %></div>

<h1>Your Classes</h1>

<table class="student-list">
  <thead>
    <tr>
      <th>Name</th>
      <th>Number of Students</th>
      <th>Payscale</th>
      <th>Class Average</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @periods.each do |period| %>
      <tr>
        <td><%= period.name %></td>
        <td><%= period.students.count %></td>
        <td><%= period.payscale %></td>
        <td><%= period.class_average %></td>
        <td><%= link_to 'Show', period %> | </td>
        <td> <%= link_to 'Edit', edit_period_path(period) %> | </td>
        <td> <%= link_to 'Delete', period, method: :delete, data: { confirm: 'Are you sure?' } %> | </td>
        <td> <%= link_to 'Enter Behavior Data', enter_behavior_periods_path %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

