<div class="enter-behavior-container">

  <div class="enter-behavior-title">Behavior Entry for <%= Date.today %></div>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Well Behaved</th>
        <th>Completed Job</th>
      </tr>
    </thead>

    <tbody>
      <%= form_for @period, url: update_behavior_period_path(@period) do |f| %>
        <% @students.each do |student| %>
          <%= f.fields_for :students, student do |ff| %>
            <%= ff.fields_for :behaviors, student.behaviors.build do |ffb| %>
              <tr>
              <%= ffb.hidden_field :date, value: Date.today %>
              <%= ffb.hidden_field :student_id, value: student.id %>
              <td><%= student.full_name %></td>
              <td><%= ffb.check_box :well_behaved, {:checked=>true} %></td>
              <% student.jobs.each do |job| %>
                <%= ff.fields_for :jobs, student.jobs.find_by_id(job.id) do |ffj|%>
                  <td><%= job.description %> <%= ffj.check_box :last_date_done, {checked: true}, Date.today, nil %></td>
                <% end %>
              <%end %>
            <% end %></tr>
          <% end %>
        <% end %>
        <div class="actions">
          <%= f.submit "Submit" %>
        </div>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to 'Home', root_path %>
