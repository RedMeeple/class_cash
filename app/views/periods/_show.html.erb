<table class="pure-table pure-table-bordered centered period-table">
  <thead>
    <tr>
      <th>First</th>
      <th>Last</th>
      <th>Cash</th>
      <th>Recent Behavior</th>
      <th>Jobs</th>
      <th>Rights</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% students.each do |student| %>
      <tr class="period-table-info">
        <td><%= student.first_name %></td>
        <td><%= student.last_name %></td>
        <td class="numeric" style="background-color:<%= student.richest?.html_safe %>">$<%= student.cash %></td>
        <td><%= student.behaved?.html_safe if !student.behaviors.empty? %></td>
        <td><% student.jobs.each do |job|%>
          <%= job.description %><br>
        <% end %></td>
        <td><% student.rights.each do |right|%>
          <%= right.description %><br>
        <% end %></td>
        <td class="period-table-info-options">
          <div class="pure-button">Options</div>
          <div class="period-table-info-options-list">
            <%= link_to 'Details', student, class: "pure-button" %>
            <%= link_to 'Edit', edit_student_path(student), remote: true, class: "pure-button" %>
            <%= link_to 'Delete', student, method: :delete, remote: true, data: { confirm: 'Are you sure?' }, class: "pure-button" %>
            <%= link_to 'Behavior History', behavior_student_path(student), class: "pure-button" %>
            <%= link_to 'Assign Job', new_job_path(student_id: student.id), class: "pure-button" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="period-bonuses centered">
  <h3>Class Bonuses</h3>
  <% period.bonuses.each do |bonus| %>
    <span class="period-bonuses-list">$<%= bonus.amount %> for <%= bonus.reason %> on <%= bonus.created_at.strftime('%b %e, %Y') %>.</span>
  <% end %>
</div>
