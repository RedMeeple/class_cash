$("#avg<%= @period.id %>").html("Class Average: <%= number_to_currency(@period.class_average, precision: 0) %>");
$("#tot<%= @period.id %>").html("Class Bonus Total: <%= number_to_currency(@period.bonuses.sum(:amount), precision: 0) %>");
if ($("#period-table-container-<%= @period.id %>").is(':visible')) {
  $("#period-table-container-<%= @period.id %>").html("<%= j(render partial: 'periods/show', locals: { students: @period.students, period: @period }) %>");
};
$("#new_bonus")[0].reset();
$(".class-modal").hide()
