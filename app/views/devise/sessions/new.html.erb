<h1>Log in</h1>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "pure-form pure-form-stacked" }) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true %>
    <%= f.input :password, required: false %>
    <%= f.input :remember_me, label_html: { class: "pure-checkbox" }, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "pure-button pure-button-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>