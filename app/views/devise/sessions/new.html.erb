<div class="welcome-wrapper">
  <div class="welcome-header">

  </div>
  <div class="signup-form-container">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "pure-form pure-form-stacked form-width centered" }) do |f| %>
    <h1>Log in</h1>

    <div class="form-inputs">
      <%= f.input :email, required: false, autofocus: true, input_html: { class: "input-total" } %>
      <%= f.input :password, required: false, input_html: { class: "input-total" } %>
      <%= f.input :remember_me, label_html: { class: "pure-checkbox" }, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "pure-button btn-cc" %>
    </div>
    <% end %>
    <span class="shared-links"><%= link_to "Forgot your password?", new_password_path(resource_name), class: "pure-button btn-cc" %></span>
  </div>
</div>
