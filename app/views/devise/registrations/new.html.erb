<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "pure-form pure-form-stacked form-width centered" }) do |f| %>
  <h2>Sign up</h2>
  
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name, input_html: { class: "input-total" } %>
    <%= f.input :last_name, input_html: { class: "input-total" } %>
    <%= f.input :email, required: true, autofocus: true, input_html: { class: "input-total" } %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { class: "input-total" } %>
    <%= f.input :password_confirmation, required: true, input_html: { class: "input-total" } %>
    <%= f.hidden_field :type, value: "Instructor" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up", class: "pure-button pure-button-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
