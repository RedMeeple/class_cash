<% @periods.uniq.each do |period| %>
  if ($("#period-table-container-<%= period.id %>").is(':visible')) {
    $("#period-table-container-<%= period.id %>").html("<%= j(render partial: 'periods/show', locals: { students: period.students, period: period }) %>");
  };
<% end %>

$("#new_transaction")[0].reset();
$(".transaction-modal").hide()
