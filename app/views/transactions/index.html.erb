<div class="heading-container">
  <h1 class="transactions-title">Student Transactions</h1>
</div>

<table class="student-table pure-table pure-table-bordered">
  <thead>
    <tr>
      <th>Sender</th>
      <th>Recipient</th>
      <th>Amount</th>
      <th>Reason</th>
      <th>Date</th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.reverse.each do |t| %>
      <tr>
        <td><%= t.student.full_name %></td>
        <td><%= Student.find(t.recipient_id).full_name %></td>
        <td>$<%= t.amount %></td>
        <td><%= t.reason %></td>
        <td><%= t.created_at.strftime('%b %e, %Y') %></td>
      </tr>
    <% end %>
  </tbody>
</table>
