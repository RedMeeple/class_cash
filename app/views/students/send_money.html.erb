<h1>Send Cash</h1>

<%= form_for @transaction, url: students_sent_money_path do |f| %>
  <% if @transaction.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@transaction.errors.count, "error") %> prohibited this student from being saved:</h2>

      <ul>
      <% @transaction.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :recipient %><br>
    <%= f.select :recipient_id, @students.map{ |a| [[a.first_name, a.last_name].join(" "), a.id] }, include_blank: true %>
  </div>
  <div class="field">
    <%= f.label :amount %><br>
    <%= f.number_field :amount %>
  </div>
  <div class="actions">
    <%= f.hidden_field :sender_id, value: @student.id %>
  </div>
  <div class="actions">
    <%= f.submit 'Send Money'%>
  </div>

<% end %>

<%= link_to 'Home', root_path %>
