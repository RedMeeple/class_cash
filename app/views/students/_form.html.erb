<%= simple_form_for @student, html: { class: "pure-form pure-form-stacked" } do |f| %>
  <%= f.error_notification %>


    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email %>
    <%= f.input :cash %>
    <%= f.association :period, include_blank: true %>
    <%= f.hidden_field :can_loan, value: false %>

    <%= f.submit "Submit", class: "pure-button pure-button-primary" %>

<% end %>
