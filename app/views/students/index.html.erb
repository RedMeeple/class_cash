<div class="heading-container">
  <h1 class="roster-title">Roster</h1>
  <div class="buttons-container">
    <button class="pure-button display-bonus-modal btn-cc">Award Individual Bonus</button>
    <button class="pure-button display-class-bonus-modal btn-cc">Award Class Bonus</button>
  </div>
</div>

<% @periods.each do |per| %>
  <% per.find_richest %>
  <div>
    <span class="period-name"><%= per.name %></span>
    <span class="paysclae">Payscale: $<%= per.payscale %></span>
    <span class="students-number">Total Students: <%= per.students.count %></span>
    <span class="class-average">Class Average: $<%= per.class_average %></span>
    <span class="view-button-span"><button id="<%= per.id %>" class="view-button btn-cc pure-button">View</button></span>
  </div>
  <div id="period-table<%= per.id %>" class="period-table"><%= render partial: 'periods/table', locals: { students: per.students } %></div>

<% end %>


<div class="bonus-modal-container">
  <div class="bonus-modal-header">
    <i class="fa-remove fa fa-2x close-btn"></i>
  </div>
  <div class="bonus-modal">
    <td class="test"> <%= render partial: 'give_bonus' %></td>
  </div>
</div>

<div class="class-bonus-modal-container">
  <div class="class-bonus-modal-header">
    <i class="fa-remove fa fa-2x close-btn"></i>
  </div>
  <div class="class-bonus-modal">
    <td class="test"> <%= render partial: 'periods/class_bonus' %></td>
  </div>
</div>
