<% @periods.each do |per| %>
  <% per.find_richest %>
  <table class="pure-table pure-table-bordered student-table">
    <thead>
      <tr>
        <th colspan="6"><%= link_to "#{per.name}", per %></th>
      </tr>
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Cash</th>
        <th>Recent Behavior</th>
        <th>Jobs</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% per.students.each do |student| %>
        <tr class="student-table-info">
          <td><%= student.richest?.html_safe %> <%= student.first_name %></td>
          <td><%= student.last_name %></td>
          <td>$<%= student.cash %></td>
          <td><%= student.behaved?.html_safe %></td>
          <td><% student.jobs.each do |job|%>
            <%= job.description %><br>
          <% end %></td>
          <td class="student-table-info-options">
            <div class="pure-button">Options</div>
            <div class="student-table-info-options-list">
              <%= link_to 'Details', student, class: "pure-button" %>
              <%= link_to 'Edit', edit_student_path(student), class: "pure-button" %>
              <%= link_to 'Delete', student, method: :delete, data: { confirm: 'Are you sure?' }, class: "pure-button" %>
              <%= link_to 'Behavior History', behavior_student_path(student), class: "pure-button" %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
