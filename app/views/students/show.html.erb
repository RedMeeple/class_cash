<div class="student-show-container">
  <div>
    <div>First name:</div>
    <div><%= @student.first_name %></div>
  </div>

  <div>
    <div>Last name:</div>
    <div><%= @student.last_name %></div>
  </div>

  <div>
    <div>Email:</div>
    <div><%= @student.email %></div>
  </div>

  <div>
    <div>Cash:</div>
    <div>$<%= @student.cash %></div>
  </div>

  <div>
    <div>Period:</div>
    <div><%= @student.period.name %></div>
  </div>

  <div>
    <div>Richest:</div>
    <div><%= @student.richest ? "Yes" : "No" %></div>
  </div>

  <div>
    <div>Received Money: </div>
    <ol>
      <% @received.each do |r| %>
        <li>$<%= r.amount %> from <%= r.student.full_name %> for
          <%= r.reason %> on <%= r.created_at.strftime('%b %e, %Y') %>.</li>
      <% end %>
    </ol>
  </div>

  <div>
    <div>Sent Money: </div>
    <ol>
      <% @sent.each do |s| %>
        <li>$<%= s.amount %> to <%= Student.find(s.recipient_id).full_name %> for
          <%= s.reason %> on <%= s.created_at.strftime('%b %e, %Y') %>.</li>
      <% end %>
    </ol>
  </div>

  <div>
    <div>Awards: </div>
    <ol>
      <% @awards.each do |a| %>
        <li><%= a.award_type.name %> for <%= a.reason %> on
          <%= a.created_at.strftime('%b %e, %Y') %>. Bonus of $<%= a.payment %></li>
      <% end %>
    </ol>
  </div>
</div>
