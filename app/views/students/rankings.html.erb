<table  class="pure-table pure-table-striped pure-table-horizontal centered">
  <tbody>
    <% @students.each_with_index do |s, index| %>
      <tr>
        <td><%= index + 1 %>.</td>
        <td><%= s.full_name %></td>
        <td><%= number_to_currency(s.cash, precision: 0) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
