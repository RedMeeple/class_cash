<%= simple_form_for StudentRightAssignment.find_by_student_id(student.id), url: assign_right_rights_path, remote: true do |f| %>
  <%= f.association :right, label: false, label_method: :description %>
  <%= f.hidden_field :student_id, value: student.id %>

  <%= f.button :submit, "Assign Right" %>
<% end %>
