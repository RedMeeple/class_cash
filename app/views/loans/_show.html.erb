<span class="modal-list">
  <strong>Lender:</strong>
  <%= loan.student.full_name %>
</span>

<span class="modal-list">
  <strong>Borrower:</strong>
  <%= Student.find_by_id(loan.recipient_id).full_name %>
</span>

<span class="modal-list">
  <strong>Amount:</strong>
  $<%= loan.amount.round %>
</span>

<span class="modal-list">
  <strong>Weekly Interest:</strong>
  <%= loan.interest %>%
</span>

<span class="modal-list">
  <strong>End date:</strong>
  <%= loan.end_date ? loan.end_date.strftime('%b %e, %Y') : "Pending" %>
</span>

<span class="modal-list">
  <strong>Balance Left:</strong>
  <%= loan.balance ? "$#{loan.balance.round}" : "Pending" %>
</span>
