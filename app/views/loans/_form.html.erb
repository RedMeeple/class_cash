<%= simple_form_for @loan do |f| %>

    <%= f.hidden_field :lender_id, value: @lender.id %>

    <%= f.grouped_collection_select :recipient_id, @periods, :students, :name, :id, :full_name %>

    <%= f.input :amount, placeholder: 100 %>
    <%= f.input :interest %>%
    <%= f.input :end_date %>

    <%= f.button :submit, "Send for confirmation" %>

<% end %>
