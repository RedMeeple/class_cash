<%= simple_form_for @job, html: { class: "pure-form pure-form-stacked" } do |f| %>
  <%= f.error_notification %>

  <%= f.input :state do %>
    <%= f.grouped_collection_select :student_id, @periods, :students, :name, :id, :full_name %>
  <% end %>
  <%= f.input :description %>
  <%= f.input :payscale %>

  <%= f.button :submit, class: "pure-button pure-button-primary" %>

<% end %>
